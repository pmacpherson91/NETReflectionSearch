<UserControl x:Class="WPFTest.DynamicFilterUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFTest"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="160" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="-" HorizontalAlignment="Left" Width="20" Background="#FF9999" Margin="0 2 0 2" FontWeight="Bold" />
        <ComboBox Name="FiltersComboBox" Grid.Column="1" Margin="4 2 2 2" />
        <StackPanel Name="FilterPanel" Grid.Column="2" Margin="2 2 2 2" />
    </Grid>
</UserControl>
