<Window x:Class="WPFTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTest"
        mc:Ignorable="d"
        Title=".NET Reflection Search" Height="350" Width="525" Background="#FFDAE3EE">
    <Border Padding="10">


        <StackPanel>
            <TextBlock Text="Search Directory (specify multiple by separating with a comma)" FontWeight="Bold" Margin="0 0 0 0" />
            <TextBox Name="DirectoryText" Padding="2" Margin="0 2 0 2" />
            <TextBlock Text="Filters" FontWeight="Bold" Margin="0 2 0 2" />
            <StackPanel Name="FiltersStackPanel">
                <!-- filters added here -->
            </StackPanel>
            <Button Content="+" HorizontalAlignment="Left" Width="20" Background="#99FF99" Margin="0 2 0 2" FontWeight="Bold" />
            <Button Content="Search" HorizontalAlignment="Left" Width="100" Background="#CCCCCC" Margin="0 2 0 2" />
            <TextBlock Text="Results" FontWeight="Bold" Margin="0 2 0 2" />

            <Grid>
                <ListView Name="ResultsListView" Grid.Row="0" Height="100">
                    <!-- results here -->
                </ListView>

                <!-- grid splitter -->
            </Grid>
        </StackPanel>
    </Border>
</Window>
